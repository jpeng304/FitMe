<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginEnd="17dp"
        android:id="@+id/etWeight"
        android:layout_alignBottom="@+id/tvWeight"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Weight(lbs):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/tvWeight"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginEnd="22dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/etWeight" />

    <TextView
        android:text="Rep:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/tvRep"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/tvWeight"
        android:layout_alignEnd="@+id/tvWeight" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/tvRep"
        android:layout_alignStart="@+id/etWeight"
        android:id="@+id/etRep" />

    <TextView
        android:text="Set:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/tvSet"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_below="@+id/tvRep"
        android:layout_alignEnd="@+id/tvRep" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/tvSet"
        android:layout_alignEnd="@+id/etRep"
        android:id="@+id/etSet" />

</RelativeLayout>